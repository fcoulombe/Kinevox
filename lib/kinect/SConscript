Import('env')

name = "kinect"
incPath = [env.Dir("#/lib/"+name)]
dependencies = ['input','libfreenect']

                                
env.Append(CPPPATH=incPath)
src_files = env.Glob("*.cpp")
lib = env.KStaticLibrary(name, src_files, dependencies)
env.AddComponent(name, None, incPath, lib, dependencies)

