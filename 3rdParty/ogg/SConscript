import platform
Import('env')

name = "ogg"
dependencies = []

def SetCFlags(ienv):
    if ienv['PLATFORM'] == "win32":
	    ienv.Append(CPPPATH=[env.Dir('#3rdParty/ogg/include')])
    else:
	    ienv.ParseConfig('pkg-config --cflags '+name)

def SetLFlags(ienv):
    if ienv['PLATFORM'] == "win32":
        libPath = '#3rdParty/ogg/lib/' + platform.architecture()[0] + '/'
        ienv.Append(LIBS=[env.File(libPath + 'libogg_static.lib')])
    else:
	    ienv.ParseConfig('pkg-config --libs '+name)
	
	
env.AddComponent(name, None, None,None,dependencies, SetCFlags, SetLFlags)