import platform
Import('env')

name = "freetype"
dependencies = []

def SetCFlags(ienv):
    if ienv['PLATFORM'] == "win32":
        ienv.Append(CPPPATH=[env.Dir('#3rdParty/freetype/include')])
    else:
        ienv.ParseConfig('pkg-config --cflags freetype2')

def SetLFlags(ienv):
    if ienv['PLATFORM'] == "win32":
        libPath = '#3rdParty/freetype/lib/' + platform.architecture()[0] + '/'
        ienv.Append(LIBS=[env.File(libPath+'freetype2411MT.lib')])
    else:
	    ienv.ParseConfig('pkg-config --libs freetype2')
	
	
env.AddComponent(name, None, None, None, dependencies, SetCFlags, SetLFlags)