IF(${WIN32})
	IF(${IS_MSVC})
		SET(FREETYPE_ROOT "${CMAKE_CURRENT_LIST_DIR}")
		SET(LPATH ${FREETYPE_ROOT}/lib/${KINEVOX_ARCHITECTURE})
		SET(LIB_NAME "freetype2411MT")
	ELSEIF(${IS_GNU})
		SET(FREETYPE_ROOT "${MSYS_PATH}/local")		
		SET(LPATH ${FREETYPE_ROOT}/lib/)
		SET(LIB_NAME "libfreetype")
	ENDIF()
	SET(FREETYPE_ROOT "${CMAKE_CURRENT_LIST_DIR}")
	
	SET(FREETYPE_INCLUDE_DIR ${FREETYPE_ROOT}/include)
	FindLibrary(FREETYPE_LIBRARY ${LIB_NAME} ${LPATH})
	SET(freetype_INCLUDE_DIR ${FREETYPE_INCLUDE_DIR} )
	list(APPEND freetype_LIBS ${FREETYPE_LIBRARY})
	#message("freetype!!!" ${FREETYPE_LIBRARY})
ELSE()
	FIND_PACKAGE(Freetype)
	SET(freetype_INCLUDE_DIR ${FREETYPE_INCLUDE_DIRS})
	list(APPEND freetype_LIBS ${FREETYPE_LIBRARY})
ENDIF()
