import platform
Import('env')

name = "vorbis"
dependencies = []

def SetCFlags(ienv):
    if ienv['PLATFORM'] == "win32":
	    ienv.Append(CPPPATH=[env.Dir('#3rdParty/vorbis/include')])
    else:
        ienv.ParseConfig('pkg-config --cflags '+name)
        ienv.ParseConfig('pkg-config --cflags vorbisfile')
	
def SetLFlags(ienv):
    if ienv['PLATFORM'] == "win32":
        libPath = '#3rdParty/vorbis/lib/' + platform.architecture()[0] + '/'
        ienv.Append(LIBS=[env.File(libPath + 'libvorbis_static.lib')])
        ienv.Append(LIBS=[env.File(libPath + 'libvorbisfile_static.lib')])
    else:
	    ienv.ParseConfig('pkg-config --libs '+name)
	    ienv.ParseConfig('pkg-config --libs vorbisfile')
    
	
env.AddComponent(name, None, None,None,dependencies, SetCFlags, SetLFlags)