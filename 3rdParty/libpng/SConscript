import platform
Import('env')

name = "libpng"
dependencies = ['zlib']

def SetCFlags(ienv):
    if ienv['PLATFORM'] == "win32":
	    ienv.Append(CPPPATH=[env.Dir('#3rdParty/libpng/include')])
    else:
	    ienv.ParseConfig('pkg-config --cflags libpng')

def SetLFlags(ienv):
    if ienv['PLATFORM'] == "win32":
        libPath = '#3rdParty/libpng/lib/' + platform.architecture()[0] + '/'
        ienv.Append(LIBS=[env.File(libPath + 'libpng15.lib')])
    else:
	    ienv.ParseConfig('pkg-config --libs libpng')
dllDep = []
if env['PLATFORM'] == "win32":
    dllDep = []

env.AddComponent(name, None, None,None,dependencies, SetCFlags, SetLFlags,dllDep)